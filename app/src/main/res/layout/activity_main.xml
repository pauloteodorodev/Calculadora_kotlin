<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@color/io_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:padding="30dp"
        android:background="@color/io_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/valorDigitadoTela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="30sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/resultadoTela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="50sp"
            android:textColor="@color/green" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">



        <TableRow>

            <Button
                android:id="@+id/botao_7"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                android:onClick="onButtonClick"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:text="7" />
            <Button
                android:id="@+id/btao_8"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginHorizontal="5dp"
                android:onClick="onButtonClick"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textSize="50dp"


                android:text="8" />
            <Button
                android:id="@+id/botao_9"
                android:layout_width="wrap_content"
                android:onClick="onButtonClick"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:textSize="50dp"

                android:text="9" />
            <Button
                android:id="@+id/botao_multiplicacao"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="@color/white"
                android:onClick="onButtonClick"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:text="ร" />

        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/botao_4"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                android:onClick="onButtonClick"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:text="4" />
            <Button
                android:id="@+id/botao_5"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginHorizontal="5dp"
                android:onClick="onButtonClick"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:text="5" />
            <Button
                android:id="@+id/botao_6"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                android:onClick="onButtonClick"
                android:textColor="@color/black"
                android:text="6" />
            <Button
                android:id="@+id/botao_subtracao"
                android:layout_marginHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                android:onClick="onButtonClick"
                android:textColor="@color/black"
                android:text="-" />

        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/botao_1"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="onButtonClick"
                android:text="1" />
            <Button
                android:id="@+id/botao_2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:onClick="onButtonClick"
                android:text="2" />
            <Button
                android:id="@+id/botao_3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_marginHorizontal="5dp"
                android:onClick="onButtonClick"
                android:text="3" />
            <Button
                android:id="@+id/botao_adicao"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_marginHorizontal="5dp"
                android:onClick="onButtonClick"
                android:text="+" />


        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/botao_igual"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:backgroundTint="@color/green"
                android:onClick="onButtonClick"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/white"

                android:layout_weight="1"
                android:text="=" />

            <Button
                android:layout_marginHorizontal="5dp"
                android:id="@+id/botao_0"
                android:layout_width="wrap_content"
                android:onClick="onButtonClick"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:text="0" />

            <Button
                android:id="@+id/botao_divisao"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:onClick="onButtonClick"
                android:layout_height="90dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:text="รท" />







        </TableRow>
    </TableLayout>


</LinearLayout>